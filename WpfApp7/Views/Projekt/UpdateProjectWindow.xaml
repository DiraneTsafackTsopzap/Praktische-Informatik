        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
           Title="Projekt Bearbeiten" Background="#FF2BA9E4" Width="300" Height="300" WindowStartupLocation="CenterScreen">

    <Grid Margin="10 10 10 10">
        <TextBlock Text="Name:" TextWrapping="Wrap" Height="30" HorizontalAlignment="Left" Margin="60, 10, 0,0"  VerticalAlignment="Center"/>
            <TextBox x:Name="TextboxUpdate" TextWrapping="Wrap" Width="161" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center"  FontSize="19" />

        <Button x:Name="speichern" Content="Speichern" Width="126" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="ProjektBearbeiten" />
            <Button x:Name="abbrechen" Content="Abbrechen" Width="126" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="Abbrechen"/>

        </Grid>
    
</Window>
