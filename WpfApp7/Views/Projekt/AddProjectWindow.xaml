<Window x:Class="WpfApp7.Views.AddProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7.Views"
        mc:Ignorable="d"

    Title="Projekt Hinzufügen" Background="#FF2BA9E4" Width="300" Height="300">

        <Grid Margin="10 10 10 10">
            <TextBlock Text="Name:" TextWrapping="Wrap" Height="30" HorizontalAlignment="Left" Margin="60, 10, 0,0"  VerticalAlignment="Center"/>
            <TextBox x:Name="ProjectTextBoxName" TextWrapping="Wrap" Width="161" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center"  FontSize="19" />

            <Button x:Name="speichern" Content="Speichern" Width="126" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Click="ProjektSpeichern" />
            <Button x:Name="abbrechen" Content="Abbrechen" Width="126" HorizontalAlignment="Left" VerticalAlignment="Bottom"  Click="Abbrechen"/>

        </Grid>

</Window>
