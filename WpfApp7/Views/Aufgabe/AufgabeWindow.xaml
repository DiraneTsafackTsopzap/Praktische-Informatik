<Window x:Class="WpfApp7.Views.Aufgabe.AufgabeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7.Views.Aufgabe"
        mc:Ignorable="d"
    Title="Aufgabe Hinzufügen" Background="#FF2BA9E4" Width="300" Height="300">

    <Grid Margin="10 10 10 10">
        <Label Content="Name:" Height="30" HorizontalAlignment="Left" Margin="60, 10, 0,0"  VerticalAlignment="Center"/>
        <Label Content="Timer:" Height="30" HorizontalAlignment="Left" Margin="60, 80, 0,0"  VerticalAlignment="Center"/>
        
        <TextBox x:Name="AufgabeTextBoxName" TextWrapping="Wrap" Width="161" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center"  FontSize="19" />
        <TextBox x:Name="TimerTextbox" HorizontalAlignment="Right" Margin="0,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="161" Height="30"/>

        <Button x:Name="speichern" Content="Speichern" Width="126" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Click="AufgabeSpeichern" />
        <Button x:Name="abbrechen" Content="Abbrechen" Width="126" HorizontalAlignment="Left" VerticalAlignment="Bottom"  Click="Abbrechen"/>

    </Grid>
</Window>
